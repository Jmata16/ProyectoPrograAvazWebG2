@model List<ProyectoModels.Carrito>

@{
    ViewData["Title"] = "Factura de Compra";
}

<!DOCTYPE html>
<html>
<head>
    <title>Ministore - Factura de Compra</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" type="text/css" href="~/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="~/css/style.css">
</head>
<body>
    @Html.Partial("_header")
    <br />
    <br />
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6 text-center">
                <h1>Factura de Compra</h1>
            </div>
        </div>
    </div>
    <br />
    <br />
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-right">
                <p style="color: black; font-weight: bold;">Comprador: @User.Identity.Name</p>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Producto</th>
                            <th>Precio</th>
                            <th>Cantidad</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <img src="@item.Producto.ImagenURL" alt="@item.Producto.Nombre" style="max-width: 100px; max-height: 100px;" />
                                    @item.Producto.Nombre
                                </td>
                                <td>$@item.Producto.Precio</td>
                                <td>@item.Cantidad</td>
                                <td>$@(item.Producto.Precio * item.Cantidad)</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <br />
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-center">
                <h3>Total de la compra: $@ViewData["TotalCompra"]</h3>

                <form method="post" action="@Url.Action("ConfirmarPago", "Pago")" onsubmit="mostrarAlerta()">
                    <button type="submit" class="btn btn-primary">Confirmar Pago</button>
                </form>
            </div>
        </div>
    </div>
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    @Html.Partial("_footer")
    <div id="alertContainer" class="container" style="display: none;">
        <div class="row">
            <div class="col-md-12 text-center">
                <div class="alert alert-success" role="alert">
                    ¡El pago se ha completado correctamente!
                </div>
            </div>
        </div>
    </div>
    <script src="js/jquery-1.11.0.min.js"></script>
    <script type="text/javascript" src="~/js/bootstrap.bundle.min.js"></script>
    <script type="text/javascript" src="~/js/plugins.js"></script>
    <script type="text/javascript" src="~/js/script.js"></script>
    <script>
        // Verificar si hay un mensaje en TempData y mostrar la alerta si es así
        var mensajePago = "@TempData["MensajePago"]";
        if (mensajePago) {
            var alertContainer = document.getElementById("alertContainer");
            alertContainer.style.display = "block";
        }
    </script>
</body>
</html>
