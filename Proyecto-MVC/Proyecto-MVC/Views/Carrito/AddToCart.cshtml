@model ProyectoModels.Producto

@{
    ViewData["Title"] = "Agregar al Carrito";
}
<!DOCTYPE html>
<html>
<head>
    <title>Ministore</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" type="text/css" href="~/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="~/css/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.css" />
</head>
<body>
    @Html.Partial("_header")
    <br />
    <br />
    <br />
    <br />
    <br />
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6 text-center">
                <h1>Agregar al Carrito</h1>
            </div>
        </div>
    </div>
    <br />
    <br />
    <div class="container">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="card">
                    <img src="~/images/cart-item1.jpg" class="card-img-top">
                    <div class="card-body">
                        <h5 class="card-title">@Model.Nombre</h5>
                        <p class="card-text">@Model.Descripcion</p>
                        <p class="card-text">Precio: $@Model.Precio</p>
                        <form asp-action="AddToCart" method="post">
                            <input type="hidden" name="productoId" value="@Model.ID" />

                            <button type="submit" class="btn btn-primary">Agregar al Carrito</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @Html.Partial("_footer")
    <script src="js/jquery-1.11.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.js"></script>
    <script type="text/javascript" src="~/js/bootstrap.bundle.min.js"></script>
    <script type="text/javascript" src="~/js/plugins.js"></script>
    <script type="text/javascript" src="~/js/script.js"></script>
</body>
</html>
