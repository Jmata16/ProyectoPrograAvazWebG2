<!DOCTYPE html>
<html>
<head>
    <style>
        .product-details {
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
            background-color: #f9f9f9;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

            .product-details img {
                max-width: 100%;
                height: auto;
                margin-bottom: 20px;
                border-radius: 5px;
            }

        .back-link {
            margin-top: 20px;
        }
    </style>
</head>

<body data-bs-spy="scroll" data-bs-target="#navbar" data-bs-root-margin="0px 0px -40%" data-bs-smooth-scroll="true" tabindex="0">
    @Html.Partial("_header")

    <br />
    <br />

    <br />
    <br />
    <br />
    <br />
    <div class="container">
        <div class="product-details">
            <h4 class="text-center">Detalles del Producto</h4>
            <hr>
            <div class="text-center">
                <img src="@Model.ImagenURL" alt="Producto" class="img-fluid" style="width: auto; height: 380px;">

            </div>
            <dl class="row">
                <dt class="col-sm-3">Nombre:</dt>
                <dd class="col-sm-9">@Model.Nombre</dd>
                <dt class="col-sm-3">Precio:</dt>
                <dd class="col-sm-9">@Model.Precio</dd>
                <dt class="col-sm-3">Descripción:</dt>
                <dd class="col-sm-9">@Model.Descripcion</dd>
            </dl>
            <div class="card-body text-center">
                <form asp-action="AgregarAlCarrito" asp-controller="Carrito" method="post">
                    <input type="hidden" name="productoId" value="@Model.ID" />
                    <button type="submit" class="btn btn-primary">Agregar al carrito</button>
                </form>
            </div>
            <div class="text-center back-link">
                <a href="/Producto/Index" class="btn btn-primary">Volver</a>
            </div>
        </div>
    </div>
    <br />
        <br/>

        <br/>



    @Html.Partial("_footer")
    <script src="js/jquery-1.11.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.js"></script>
    <script type="text/javascript" src="~/js/bootstrap.bundle.min.js"></script>
    <script type="text/javascript" src="~/js/plugins.js"></script>
    <script type="text/javascript" src="~/js/script.js"></script>
</body>
</html>
